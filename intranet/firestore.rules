rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra existente para prospects
    match /artifacts/{appId}/public/data/prospects/{prospectId} {
      allow create, read: if true;
      allow update, delete: if request.auth != null;
    }

    // Nova regra para tarefas
    match /artifacts/{appId}/public/data/tasks/{taskId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
      match /{subcollection}/{documentId} {
        allow read, write: if request.auth != null;
      }
    }

    // Regra para Tarefas Padrão
    match /artifacts/{appId}/public/data/standard_tasks/{standardTaskId} {
      allow read: if request.auth != null;
      allow write: if true;
    }

    // Nova regra para reuniões
    match /artifacts/{appId}/public/data/meetings/{meetingId} {
      allow read, write: if request.auth != null;
    }

    // Regras para Formulários Dinâmicos
    match /artifacts/{appId}/public/data/forms/{formId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /artifacts/{appId}/public/data/form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Regras para Instâncias de Formulários (Contratos)
    match /artifacts/{appId}/public/data/formInstances/{instanceId} {
      allow read, update: if true;
      allow create, delete: if request.auth != null;
    }

    // Regras para a coleção de Serviços
    match /artifacts/{appId}/public/data/services/{serviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regra para Mensagens Rápidas
    match /artifacts/{appId}/public/data/mensagens_rapidas/{messageId} {
      allow create, read: if true;
      allow update, delete: if request.auth != null;
    }

    // Regra para Configurações do Kanban
    match /artifacts/{appId}/public/data/kanban_configs/{configId} {
      allow read, write: if request.auth != null;
    }

    // Regras para Mapas Mentais
    match /artifacts/{appId}/public/data/mind-maps/{mapId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.owner == request.auth.uid;
      match /nodes/{nodeId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/artifacts/$(appId)/public/data/mind-maps/$(mapId)).data.owner == request.auth.uid;
      }
      match /connections/{connectionId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/artifacts/$(appId)/public/data/mind-maps/$(mapId)).data.owner == request.auth.uid;
      }
    }

    // Regras para o chat
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.members;
      match /messages/{messageId} {
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.members;
      }
    }

    match /users/{userId} {
      allow read, write: if true;
    }

    // Regra para a coleção de Roles
    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regras para a coleção de Metas (Goals)
    match /goals/{goalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // --- REGRAS PARA O SISTEMA DE CURSOS ---
    match /settings/whitelabel {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null;
      match /modules/{moduleId} {
        allow read: if true;
        allow write: if request.auth != null;
        match /lessons/{lessonId} {
          allow read: if true;
          allow write: if request.auth != null;
        }
      }
    }
  }
}
